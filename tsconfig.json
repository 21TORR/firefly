{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": false,
        "strict": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "alwaysStrict": false,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020"
        ]
    },
    "files": [
        "./src/Firefly.ts"
    ],
    "include": [
        "**/*.tsx",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}
